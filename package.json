{
  "name": "beat-sink-ui-prototype",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "packageManager": "npm@11.2.0",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "storybook": "turbo run storybook",
